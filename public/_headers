# Cache control headers for Netlify

# HTML files - always revalidate to get latest asset references
/index.html
  Cache-Control: no-cache

# Service worker - always revalidate (even though we're unregistering it,
# this ensures any old cached service-worker.js gets refreshed)
/service-worker.js
  Cache-Control: no-cache

# Static assets with content hashes - cache indefinitely (1 year)
# These filenames change when content changes, so they're safe to cache
/static/*
  Cache-Control: public, max-age=31536000, immutable
